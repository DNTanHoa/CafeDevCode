@using CafeDevCode.Logic.Shared.Configs
@using Microsoft.Extensions.Options
@inject IOptions<SiteConfig> siteConfig

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="TemplateMo">
    <link preload href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Header", required: false)
    <script preload src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <link preload rel="stylesheet" href="@(siteConfig.Value.HttpsUrl + "lib/bootstrap/dist/css/bootstrap.min.css")" />
    <link preload rel="stylesheet" href="@(siteConfig.Value.HttpsUrl + "assets/css/fontawesome.css")"/>
    <link preload rel="stylesheet" href="@(siteConfig.Value.HttpsUrl + "assets/css/templatemo-stand-blog.css")"/>
    <link preload rel="stylesheet" href="@(siteConfig.Value.HttpsUrl + "assets/css/owl.css")"/>
    <link preload rel="stylesheet" href="@(siteConfig.Value.HttpsUrl + "css/site.css")"/>
    <script src="@(siteConfig.Value.HttpsUrl + "vendor/jquery/jquery.min.js")"></script>
    <script src="@(siteConfig.Value.HttpsUrl + "vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
</head>
<body>
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <header class="">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center justify-content-center" href="index.html">
                    <img src="~/image/logo.png" height="50" width="50"/>
                    <h2 class="ms-2">Cafe Dev Code<em>.</em></h2>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    @await Html.PartialAsync("~/Views/Partial/TopNavigation.cshtml")
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="social-icons">
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Behance</a></li>
                        <li><a href="#">Linkedin</a></li>
                        <li><a href="#">Dribbble</a></li>
                    </ul>
                </div>
                <div class="col-lg-12">
                    <div class="copyright-text">
                        <p>
                            Copyright 2022 Cafe Dev Code.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    
    <script src="@(siteConfig.Value.HttpsUrl + "assets/js/custom.js")"></script>
    <script src="@(siteConfig.Value.HttpsUrl + "assets/js/owl.js")"></script>
    <script src="@(siteConfig.Value.HttpsUrl + "assets/js/slick.js")"></script>
    <script src="@(siteConfig.Value.HttpsUrl + "assets/js/isotope.js")"></script>
    <script src="@(siteConfig.Value.HttpsUrl + "assets/js/accordions.js")"></script>

    <script language="text/Javascript">
        cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
        function clearField(t) {                   //declaring the array outside of the
            if (!cleared[t.id]) {                      // function makes it static and global
                cleared[t.id] = 1;  // you could use true and false, but that's more typing
                t.value = '';         // with more chance of typos
                t.style.color = '#fff';
            }
        }
    </script>
</body>
</html>